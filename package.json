{
  "name": "kubernetes-models",
  "version": "0.6.1",
  "private": true,
  "description": "Kubernetes models",
  "repository": {
    "type": "git",
    "url": "https://github.com/tommy351/kubernetes-models-ts.git"
  },
  "homepage": "https://github.com/tommy351/kubernetes-models-ts",
  "author": "Tommy Chen <tommy351@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "kubernetes"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "build": "tsc -b packages/openapi-generate && lerna run build --stream && node scripts/build.js",
    "watch": "npm run build -- --watch",
    "clean": "node scripts/build.js --clean",
    "bootstrap": "lerna bootstrap"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .js,.ts --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "~3.5.3"
  }
}
